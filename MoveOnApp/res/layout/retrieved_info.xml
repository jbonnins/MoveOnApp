<!-- PARENT -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_bg"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/image_typetransport"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/type_of_transport"
        android:src="@drawable/bus" />

    <TextView
        android:id="@+id/text_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/image_typetransport"
        android:layout_toStartOf="@+id/image_typetransport"
        android:gravity="center"
        android:text="@string/scheduled"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorTexto_Blanco" />

 </RelativeLayout>